{
    "manifest_version": 3,
    "name": "MangaReader",
    "version": "0.1",
    "author": "Levi Ricardo",
    "description": "Uma extensão pra ajudar a ler mangá",

    "permissions": [
        "activeTab",
        "storage"
    ],
    
    "background": {
        "scripts": ["./background.js"]
    },

    "action": {
        "default_area": "navbar",
        "default_icon": "./imgs/icon.png",
        "default_popup": "./index.html",
        "default_title": "MangaReader"
    }
}
